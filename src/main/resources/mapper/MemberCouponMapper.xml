<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ace.dao.MemberCouponMapper">
    <resultMap type="com.ace.entity.coupon.MemberCoupon" id="mcMap">
        <id column="id" property="id"/>
        <result column="account_id" property="accountId"/>
        <result column="name" property="name"/>
        <result column="type" property="type"/>
        <result column="discount" property="discount"/>
        <result column="min" property="min"/>
        <result column="resume" property="resume"/>
        <result column="start_date" property="startDate"/>
        <result column="end_date" property="endDate"/>
        <result column="status" property="status"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>
    <select id="recordsTotal" resultType="java.lang.Integer">
        SELECT count(1) AS recordsTotal FROM bb_member_coupons
        <where>
            <if test="keyword != null and keyword != ''">
                and name LIKE "%${keyword}%"
            </if>
            <if test="couponId != 0">
                and coupon_id = ${couponId}
            </if>
        </where>
    </select>

    <select id="dataList" resultMap="mcMap">
        select * from bb_member_coupons
        <where>
            <if test="keyword != null and keyword != ''">
                and name LIKE "%${keyword}%"
            </if>
            <if test="couponId != null and couponId != '' and couponId != 0">
                and coupon_id = ${couponId}
            </if>
        </where>
        order by id desc LIMIT #{start},#{length}
    </select>

    <insert id="create" useGeneratedKeys="true" keyProperty="id">
        insert into
        bb_member_coupons(name,type,discount,min,resume,expired_type,start_date,end_date,duration,limit_pro,limit_org,limit_room)
        values
        <foreach collection="list" item="mc" index="index" separator=",">
            (
            #{mc.name},
            #{mc.type},
            #{mc.discount},
            #{mc.min},
            #{mc.resume},
            #{mc.expiredType},
            #{mc.startDate},
            #{mc.endDate},
            #{mc.duration},
            #{mc.limitPro},
            #{mc.limitOrg},
            #{mc.limitRoom}
            )
        </foreach>

    </insert>

    <select id="findById" resultMap="mcMap">
        select * from bb_member_coupons where id = #{id} limit 1
    </select>

    <update id="update">
        update bb_member_coupons set name = #{name},type = #{type},discount=#{discount},min=#{min},resume=#{resume} where id = #{id}
    </update>
    <delete id="destroy">
        delete  from bb_member_coupons where id = #{id}
    </delete>
</mapper>